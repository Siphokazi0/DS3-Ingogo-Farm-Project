@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>SPBFI - Confirm Forgot Password</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="~/Content/_DashBoardFarmManager/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/_DashBoardFarmManager/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/_DashBoardFarmManager/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="login-page">
    <div class="login-logo">
        <a><b>Siya Pham Belie</b></a><a>Farm Ingogo</a>
    </div><!-- /.login-logo -->

<br/>
<br/>
<div class="row">
    <div class="col col-lg-6 col-lg-offset-3">
        <div class="login-box-body">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="login-box-body col-lg-18">

                        <div class="row">
                            <section id="loginForm">
                                <hgroup class="title">
                                    <h1>@ViewBag.Title.</h1>
                                </hgroup>
                                <div>
                                    <p>
                                        Please check your email to reset your password. &nbsp;&nbsp;<span><i class="glyphicon glyphicon-search"></i><a href="http://www.google.com">Click Here!!</a></span>
                                    </p>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Content/_DashBoardFarmManager/plugins/jQuery/jQuery-2.1.3.min.js"></script>
<script src="~/Content/_DashBoardFarmManager/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/_DashBoardFarmManager/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
</body>

</html>
