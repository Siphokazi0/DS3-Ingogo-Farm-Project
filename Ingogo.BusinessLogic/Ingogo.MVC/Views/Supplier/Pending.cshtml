@model Ingogo.Model.Supplier_Management.Model_View.SuppliersView

@{
    ViewBag.Title = "Pending";
}

<h2>Pending</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Suppliers</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SupplierId)
        @Html.HiddenFor(model => model.SupplierName)
        @Html.HiddenFor(model => model.SupplierLastName)
        @Html.HiddenFor(model => model.SupplierCellNo)
        @Html.HiddenFor(model => model.SupplierTelNo)
        @Html.HiddenFor(model => model.SupplierEmailAddress)
        @Html.HiddenFor(model => model.SupplierPhysicalAddress)
        @Html.HiddenFor(model => model.SupplierShortCode)
        @Html.HiddenFor(model => model.UserId)



        <div class="form-group">
            @Html.LabelFor(model => model.SupplierStatus, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(g => g.SupplierStatus, new[]
                {
                    new SelectListItem {Value = "Approved", Text = "Approve"},
                    new SelectListItem {Value = "UnApproved", Text = "UnApprove"}

                }, "--Select Status--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SupplierStatus, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllPending")
</div>
