@model Ingogo.Model.Batch_Management.Model_View.BatchTypeView

@{
    ViewBag.Title = "AddBatchType";
    Layout = "~/Views/Shared/_Supervisor.cshtml";
}

<h2>Add Batch Type</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BatchTypeDesc, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.BatchTypeDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BatchTypeDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<p class="Error text-danger">@ViewBag.Exist </p>
<div>
    @Html.ActionLink("Back to List", "GetAllBatchType")
</div>

