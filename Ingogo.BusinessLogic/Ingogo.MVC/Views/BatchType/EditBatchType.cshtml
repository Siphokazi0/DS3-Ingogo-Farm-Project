@model Ingogo.Model.Batch_Management.Model_View.BatchTypeView

@{
    ViewBag.Title = "EditBatchType";
    Layout = "~/Views/Shared/_Supervisor.cshtml";
}

<h2>Edit BatchType</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
