@model Ingogo.Model.Batch_Management.Model_View.BatchView

@{
    //ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_FarmManager.cshtml";
}

<h2>Create Batch</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.BatchTypeid, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(x => x.BatchTypeid, (IEnumerable<SelectListItem>)ViewData["BatchType"], "--Select BatchType--",
                 new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BatchTypeid, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.NumOfAnimals, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.NumOfAnimals,null, new { htmlAttributes = new { @class = "form-control"  ,placeholder = "Enter Number Of Animals"} })
                @Html.ValidationMessageFor(model => model.NumOfAnimals, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Agerange, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Agerange, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Animals Age Range" } })
                @Html.ValidationMessageFor(model => model.Agerange, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Wiegth, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Wiegth, new { htmlAttributes = new { @class = "form-control" ,placeholder = "Enter Minimum Wiegth" } })
                @Html.ValidationMessageFor(model => model.Wiegth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Totalcost, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Totalcost, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Batch Total Cost" } })
                @Html.ValidationMessageFor(model => model.Totalcost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllBatches")
</div>
