@model Ingogo.Model.Animal_Management.Model_View.PercentageView

@{
    ViewBag.Title = "AddPercentage";
    Layout = "~/Views/Shared/_FarmAssistance.cshtml";
}

<h2>AddPercentage</h2>
<p>
    @Html.ActionLink("Go to Schemes", "GetAllSchemes", "FeedingScheme")
</p>
<p>
    @Html.ActionLink("Go to Feeding Stocks","GetAllFeedingStock","FeedingStock")
</p>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PercentageView</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FeedingStockId, "Ingredient Item", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("FeedingStockId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FeedingStockId, "", new { @class = "text-danger" })
            </div>
        </div> 

        <div class="form-group">
             @Html.LabelFor(model => model.Percentage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Percentage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Percentage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FeedingSchemeId, "Feeding Scheme Code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("FeedingSchemeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FeedingSchemeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllPercentage")
</div>


