@model Ingogo.Model.Animal_Management.Model_View.FeedingIngredientsView

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddFeedIngredient</title>
   
</head>
<body>
    @using (Ajax.BeginForm("AddFeedIngredient", null, new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace}, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h2>Add Ingredients</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*<div class="form-group">
                @Html.LabelFor(model => model.IngredientMass, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.IngredientMass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IngredientMass, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <div class="form-group">
                @Html.LabelFor(model => model.FeedingPercentageId, "FeedingPercentageId", htmlAttributes: new {@class = "control-label col-md-4"})
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-7">
                            @Html.DropDownList("FeedingPercentageId", null, htmlAttributes: new {@class = "form-control"})
                        </div>
                        <div class="col-md-2">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#myModal">
                                    Add Percentage
                                </button>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.FeedingPercentageId, "", new {@class = "text-danger"})
                </div>
            </div>
           
    
            <div class="form-group">
                @Html.LabelFor(model => model.FeedingStockId, "FeedingStockId", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("FeedingStockId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FeedingStockId, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" value="Add To List" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h2 class="modal-title" id="myModalLabel">Add Percentage %</h2>
                </div>
                <div class="modal-body">
                    @Html.Partial("AddFeedPercentage")
                </div>
            </div>
        </div>
    </div>
</body>
</html>
