@model IEnumerable<Ingogo.Model.Treatment_Managemnt.Model_View.IngredientsViewPar>

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_FarmAssistance.cshtml";
}

<h2>GetAll</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IngredientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumIngredients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredientprice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IngredientMass)
        </th>
