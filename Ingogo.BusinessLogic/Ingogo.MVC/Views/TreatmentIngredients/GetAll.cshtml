@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IngredientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumIngredients)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredientprice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IngredientMass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalMass)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditIngredient", new { id=item.IngredientId }) |
            @Html.ActionLink("Details", "Details", new { id=item.IngredientId }) |
            @Html.ActionLink("Delete", "DeleteIngredient", new { id=item.IngredientId })
        </td>
    </tr>
}

</table>
