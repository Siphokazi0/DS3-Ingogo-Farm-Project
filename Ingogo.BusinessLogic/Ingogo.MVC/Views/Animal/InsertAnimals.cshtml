            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AniTotCost, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                @Html.EditorFor(model => model.AniTotCost, new {htmlAtttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.AniTotCost, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AnimalValue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.AnimalValue, new { htmlAtttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AnimalValue, "", new { @class = "text-danger" })
            </div>
        </div>

      
        @*@Html.HiddenFor(model => model.AniCurrentCost)
        @Html.HiddenFor(model => model.AniTotCost)
        @Html.HiddenFor(model => model.AniCode)
        @Html.HiddenFor(model => model.AniSaleStatus)
        @Html.HiddenFor(model => model.AnimalValue)*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
        
    </div>
}

<div>
    @Html.ActionLink("Back to List", "GetAllAnimals")
</div>
